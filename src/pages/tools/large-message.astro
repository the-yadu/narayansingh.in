---
import Layout from '../../layouts/Layout.astro';
import LargeMessage from '../../components/tools/LargeMessage';
---
<Layout>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>You have a new message! Click here to open</title>
    <meta name="description" content="You have a new message! Click here to open and view it in large, beautiful type. Share this link to surprise someone." />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
  </head>
  <section class="max-w-2xl mx-auto py-8 px-4">
    <a href="/tools" class="inline-block mb-6 text-blue-700 dark:text-blue-400 hover:underline font-medium">← Back to Tools</a>
    <h1 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">Large Message</h1>
    <LargeMessage client:load />
  </section>
</Layout>
