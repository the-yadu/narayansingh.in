---

<Layout>
  <section class="max-w-4xl mx-auto py-8 px-4">
    <h1 class="text-3xl font-bold mb-8 text-gray-900">Projects</h1>
    <div class="mb-6">
      <input
        id="project-search"
        type="text"
        placeholder="Search projects..."
        class="w-full max-w-md px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-green-400 focus:outline-none text-lg shadow-sm bg-white"
        oninput="filterProjects(event)"
        aria-label="Search projects"
      />
    </div>
    <div id="projects-grid" class="grid gap-6 md:grid-cols-2">
      {projects.map((p, i) => p.link ? (
        <a
          href={p.link}
          class={`bg-gradient-to-br from-green-100 to-green-50 rounded-xl shadow border border-green-200 p-6 flex flex-col hover:shadow-lg hover:scale-[1.02] transition focus:outline-none focus:ring-2 focus:ring-green-400 project-card`}
          style="text-decoration: none;"
          data-name={p.name.toLowerCase()}
          data-desc={p.desc.toLowerCase()}
        >
          <div class="flex items-center gap-3 mb-2">
            <span class={`${p.color} text-2xl`}>{p.icon}</span>
            <span class="font-semibold text-lg text-gray-800">{p.name}</span>
          </div>
          <p class="text-gray-600 mb-2">{p.desc}</p>
          <span class="inline-block mt-auto text-green-700 font-medium hover:underline">Try it â†’</span>
        </a>
      ) : (
        <div
          class="bg-white/90 rounded-xl shadow border border-gray-200 p-6 flex flex-col hover:shadow-lg transition project-card"
          data-name={p.name.toLowerCase()}
          data-desc={p.desc.toLowerCase()}
        >
          <div class="flex items-center gap-3 mb-2">
            <span class={`${p.color} text-2xl`}>{p.icon}</span>
            <span class="font-semibold text-lg text-gray-800">{p.name}</span>
          </div>
          <p class="text-gray-600 mb-2">{p.desc}</p>
        </div>
      ))}
      <div class="bg-gray-50 rounded-xl border border-dashed border-gray-300 p-6 flex items-center justify-center text-gray-400 italic min-h-[100px] project-card" data-name="more projects" data-desc="more projects">
        More projects coming soon...
      </div>
    </div>
    <script is:inline>
      function filterProjects(e) {
        const q = e.target.value.toLowerCase();
        document.querySelectorAll('.project-card').forEach(card => {
          const name = card.getAttribute('data-name') || '';
          const desc = card.getAttribute('data-desc') || '';
          if (name.includes(q) || desc.includes(q)) {
            card.style.display = '';
          } else {
            card.style.display = 'none';
          }
        });
      }
    </script>
  </section>
</Layout>
